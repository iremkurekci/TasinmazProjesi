@model Taşınmaz_Projesi.Models.Tasinmaz
@using (Html.BeginForm())
{
    {
        ViewBag.Title = "Delete";
    }
    <h2>Sil</h2>
    <br />
    <br />
    <br />
    <div style="float:left">@Html.ActionLink("Çıkış", "Cıkıs", "Login", null, new { @class = "btn-default" })</div>
    <br />
    <br />
    <br />

  
        @Html.AntiForgeryToken();
        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.TasinmazID)

            <div class="form-group" style="float:left" id="leftpart">
                <div style="margin:50px">
                    @Html.EditorFor(model => model.Il, new { htmlAttributes = new { @class = "form-control", Placeholder = "İl", Readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Il, "", new { @class = "text-danger" })
                </div>
                <div style="margin:50px">
                    @Html.EditorFor(model => model.Ilce, new { htmlAttributes = new { @class = "form-control", Placeholder = "İlçe", Readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Ilce, "", new { @class = "text-danger" })
                </div>
                <div style="margin:50px">
                    @Html.EditorFor(model => model.Mahalle, new { htmlAttributes = new { @class = "form-control", Placeholder = "Mahalle", Readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Mahalle, "", new { @class = "text-danger" })
                </div>
                <div style="margin:50px">
                    @Html.EditorFor(model => model.Ada, new { htmlAttributes = new { @class = "form-control", Placeholder = "Ada", Readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Ada, "", new { @class = "text-danger" })
                </div>
                <div style="margin:50px">
                    @Html.EditorFor(model => model.Parsel, new { htmlAttributes = new { @class = "form-control", Placeholder = "Parsel", Readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Parsel, "", new { @class = "text-danger" })
                </div>
                <div style="margin:50px">
                    @Html.EditorFor(model => model.Nitelik, new { htmlAttributes = new { @class = "form-control", Placeholder = "Nitelik", Readonly = "readonly" } })
                    @Html.ValidationMessageFor(model => model.Nitelik, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group" style="float:left">
                <div id="adres">
                    @Html.EditorFor(model => model.Adres, new { htmlAttributes = new { @class = "form-control", Placeholder = "Adres", Readonly = "readonly", @rows = 15, @cols = 30 } })
                    @Html.ValidationMessageFor(model => model.Adres, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="col-md-offset-6 col-md-6">
                <input type="submit" value="Sil" class="btn-primary" />
            </div>
            <div class="clear"></div>

        </div>

        <style type="text/css">
            .clear {
                clear: both;
            }

            #adres {
                margin-left: 150px;
                margin-top: 50px;
                resize: none;
            }

            .form-control {
                border: 1px solid;
                border-radius: 40px;
                width: 300px;
                height: 60px;
                padding: 20px;
                resize: none;
            }

            .btn-primary {
                width: 150px;
                height: 60px;
                border: 1px solid;
                border-radius: 40px;
            }

            .btn-default {
                border: 1px solid;
                border-radius: 50%;
                width: 70px;
                height: 70px;
                outline: none;
                padding-left: 20px;
                padding-right: 20px;
                padding-bottom: 25px;
                padding-top: 25px;
            }
        </style>
    }

}


